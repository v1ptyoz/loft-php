<style>
    .header {
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 10px;
    }

    .header div {
        width: 150px;
        text-align: center;
        font-weight: bold;
    }

    .row {
        margin-bottom: 5px;
    }

    .edit-form {
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .edit-form input {
        width: 150px;
    }

    .new form {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
    }

</style>

<div style="width: 900px; margin: 0 auto">
    <h3 style="text-align: center">{{ title }}</h3>
    <div class="header">
        <div>Name</div>
        <div>Email</div>
        <div>Password</div>
        <div>Confirm</div>
        <div>isAdmin</div>
        <div></div>
    </div>
    <div class="content">
        {% for user in users %}
            <div class="row">
                <form class="edit-form" action="/admin/updateUser/?id={{ user.id }}" method="POST">
                    <input type="text" name="name" value={{ user.name }}>
                    <input type="text" name="email" value={{ user.email }}>
                    <input type="password" name="password">
                    <input type="password" name="confirm">
                    {% if user.isAdmin == 1 %}
                        <input type="checkbox" name="isAdmin" checked>
                    {% else %}
                        <input type="checkbox" name="isAdmin">
                    {% endif %}
                    <input type="submit" value="Отправить">
                </form>
            </div>
        {% endfor %}
    </div>
</div>

<div class="new">
    <h3>Добавить нового пользователя?</h3>
        <form action="/admin/createUser" method="POST">
            <input type="text" name="name" placeholder="Name">
            <input type="text" name="email" placeholder="Email">
            <input type="password" name="password" placeholder="Password">
            <input type="password" name="confirm" placeholder="Confirm password">
            <label>Is admin?<input type="checkbox" name="isAdmin"></label>
            <input type="submit" value="Создать">
        </form>
</div>


